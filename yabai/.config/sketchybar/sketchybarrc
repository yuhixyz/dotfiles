############## BAR ############## 
# sketchybar --bar height=26         \
#                  blur_radius=50    \
#                  position=top      \
#                  padding_left=10   \
#                  padding_right=10  \
#                  color=0x44000000
sketchybar --bar height=26         \
                 blur_radius=50    \
                 position=top      \
                 padding_left=10   \
                 padding_right=10  \
                 color=0x44000000

############## GLOBAL DEFAULTS ############## 
sketchybar --default updates=when_shown                                \
                    drawing=on                                        \
                    cache_scripts=on                                  \
                    icon.font="JetbrainsMono Nerd Font:Regular:13.0"  \
                    icon.color=0xffffffff                             \
                    label.font="JetbrainsMono Nerd Font:Regular:13.0" \
                    label.color=0xffffffff

############## SPACE DEFAULTS ############## 
sketchybar --default label.padding_left=2  \
                     label.padding_right=6 \
                     icon.padding_left=4   \
                     icon.padding_right=6

############## PRIMARY DISPLAY SPACES ############## 
sketchybar --add space code left                              \
           --set code associated_space=1                      \
                      associated_display=1                    \
                      icon=􀃋                                  \
                      icon.highlight_color=0xffc4a7e7         \
                      icon.background.height=2                \
                      icon.background.color=0xffc4a7e7        \
                      icon.background.y_offset=-13            \
                      label=code                              \
                      click_script="yabai -m space --focus 1" \
                      script="~/.config/sketchybar/plugins/space.sh" \
                                                              \
           --add space research left                          \
           --set research  associated_space=2                 \
                      associated_display=1                    \

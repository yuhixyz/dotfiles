sketchybar -m --add event bluetooth_change "com.apple.bluetooth.status"                 \
              --add item headphones right                                               \
              --set headphones updates=on                                               \
                               icon=􀟥                                                   \
                               script="~/.config/sketchybar/plugins/airpods_battery.sh" \
              --subscribe headphones bluetooth_change

sketchybar --add alias "QQ,Item-0" right                                                \
           --set "QQ,Item-0" click_script="open -a 'QQ'"

sketchybar --add event input_change 'AppleSelectedInputSourcesChangedNotification'      \
           --add item input right                                                       \
           --set input script="~/.config/sketchybar/plugins/input.sh"                   \
                       label.font="SF Pro:Medium Italic:13.0"                           \
           --subscribe input input_change


############## FINALIZING THE SETUP ##############
sketchybar --update
